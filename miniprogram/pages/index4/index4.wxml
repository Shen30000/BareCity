<!--pages/index4/index4.wxml-->
<van-cell-group>
  <van-field
    value="{{ ItemName }}"
    required
    label="物品名称"
    placeholder="请输入物品名称"
    bind:blur="onClickItemName"
  />

  <van-field
    value="{{ ItemDesc }}"
    label="物品描述"
    placeholder="请输入物品描述"
    required
    bind:blur="onClickItemDesc"
  />
</van-cell-group>
<van-button plain type="primary" bind:click="onUploadfile">获取图片fileID</van-button>

<van-button plain type="primary" bind:click="onUpdateDB">添加到数据库</van-button>